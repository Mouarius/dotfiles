set $mode_power [l]ogoff | [s]hutdown
mode "$mode_power" {
        bindsym l exec i3-msg exit
        bindsym s exec systemctl poweroff
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym --release XF86PowerOff mode "$mode_power"


